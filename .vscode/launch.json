{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Spring Boot - DrugApprovalApplication",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "mainClass": "com.drugapproval.DrugApprovalApplication",
      "projectName": "drug-approval-backend",
      "args": "",
      "envFile": "${workspaceFolder}/backend/.env",
      "vmArgs": "-Dspring.profiles.active=dev"
    },
    {
      "type": "java",
      "name": "Debug Spring Boot",
      "request": "attach",
      "hostName": "localhost",
      "port": 5005
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Frontend - npm dev",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": ["Spring Boot - DrugApprovalApplication", "Frontend - npm dev"],
      "stopAll": true
    }
  ]
}
